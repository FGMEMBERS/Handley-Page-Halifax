<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <author>BARANGER Emmanuel (3D), StuartC</author>
    <aircraft-version>0.6a</aircraft-version>
    <status>Alpha</status>
   
    <fuel-fraction>1</fuel-fraction>
  
    <startup>
      <splash-texture>Aircraft/Handley-Page-Halifax/halifax-splash.png</splash-texture>
    </startup>

    <model>
      <path>Aircraft/Handley-Page-Halifax/Models/halifax.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>
<!--
    <submodels>
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/Handley-Page-Halifax/Models/weapons/release.xml</path>
    </submodels>
-->
    <sound>
      <path>Aircraft/Handley-Page-Halifax/Sounds/halifax-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                           <!--  0 immat -->
        <int type="int" n="1">  0 </int>                                           <!--  1 immat -->
        <int type="int" n="2">  0 </int>                                           <!--  2 immat -->
        <int type="int" n="3">  0 </int>                                           <!--  3 immat -->
        <int type="int" n="4">  0 </int>                                           <!--  4 immat -->
        <int type="int" n="5">  0 </int>                                           <!--  5 immat -->
        <int type="bool" n="6" alias="/smoke/active"> 0 </int>                     <!--  6 start smoke -->
        <int type="int" n="7" alias="smoke/particlepersec"> 50 </int>              <!--  7 particlepersec -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>           <!-- 10 reserved for bombable mode -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m"> 0 </float>                      <!-- altitude for MP shadow -->
        <float n="3" alias="/smoke/colors/knob-red">1</float>                      <!-- 3 smoke mixer red setting -->
        <float n="4" alias="/smoke/colors/knob-green">1</float>                    <!-- 4 smoke mixer green setting -->
        <float n="5" alias="/smoke/colors/knob-blue">1</float>                     <!-- 5 smoke mixer blue setting -->
        <string n="9" type="string" />                                             <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <help>
      <title>Short halifax</title>
      <key>
        <name>d</name>
        <desc>Open/Close bomb bay door</desc>
      </key>
    </help>

    <menubar include="Dialogs/halifax-menu.xml"/>

  </sim>
  
  <environment>
    <turbulence>
      <use-cloud-turbulence>true</use-cloud-turbulence>
    </turbulence>
  </environment>

  <controls>
    <engines>
      <engine n="0">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
      <engine n="2">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
      <engine n="3">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="2">
      <engine-num type="int">2</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="3">
      <engine-num type="int">3</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/halifax-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Handley-Page-Halifax/Nasal/doors.nas</file>
    </doors>
    <halifax>
      <file>Aircraft/Handley-Page-Halifax/Nasal/liveries.nas</file>
    </halifax>
  </nasal>

</PropertyList>
