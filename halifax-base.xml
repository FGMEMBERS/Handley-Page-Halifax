<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <author>BARANGER Emmanuel (3D)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>
   
    <fuel-fraction>0.8</fuel-fraction>
  
    <startup>
      <splash-texture>Aircraft/Handley-Page-Halifax/halifax-splash.png</splash-texture>
    </startup>

    <model>
      <path>Aircraft/Handley-Page-Halifax/Models/halifax.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>
<!--
    <submodels>
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/Handley-Page-Halifax/Models/weapons/release.xml</path>
    </submodels>
-->
    <sound>
      <path>Aircraft/Handley-Page-Halifax/Sounds/halifax-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

    <help>
      <title>Short halifax</title>
      <key>
        <name>d</name>
        <desc>Open/Close bimb bay door</desc>
      </key>
    </help>

    <menubar include="Dialogs/halifax-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
      <engine n="2">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
      <engine n="3">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="2">
      <engine-num type="int">2</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="3">
      <engine-num type="int">3</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/halifax-keyboard.xml"/>
  </input>
 
  <nasal>
    <halifax>
      <file>Aircraft/Handley-Page-Halifax/Nasal/doors.nas</file>
      <file>Aircraft/Handley-Page-Halifax/Nasal/liveries.nas</file>
    </halifax>
  </nasal>

</PropertyList>

